<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="-16dp"
    android:paddingRight="-16dp"
    android:paddingTop="-16dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.lee.scanpay.menu_page">

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/lightning_button"
        android:src="@drawable/water_edit"
        android:onClick="goWater"
        android:layout_below="@+id/textView49"
        android:layout_toLeftOf="@+id/water_button"
        android:layout_toStartOf="@+id/water_button"
        android:layout_marginRight="50dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/water_button"
        android:src="@drawable/lightning_edit"
        android:onClick="goElectric"
        android:layout_below="@+id/textView49"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="80dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Main Menu"
        android:id="@+id/textView49"
        android:layout_alignWithParentIfMissing="false"
        android:autoText="false"
        android:background="#FD5621"
        android:gravity="fill_vertical|center_horizontal"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton"
        android:src="@drawable/future_use"
        android:onClick="goElectric"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/lightning_button"
        android:layout_alignLeft="@+id/lightning_button"
        android:layout_alignStart="@+id/lightning_button"
        android:nestedScrollingEnabled="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton2"
        android:src="@drawable/future_use"
        android:onClick="goElectric"
        android:layout_alignBottom="@+id/imageButton"
        android:layout_toRightOf="@+id/lightning_button"
        android:layout_toEndOf="@+id/lightning_button"
        android:nestedScrollingEnabled="true"
        android:layout_marginTop="30dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton3"
        android:src="@drawable/future_use"
        android:onClick="goElectric"
        android:layout_marginTop="30dp"
        android:nestedScrollingEnabled="true"
        android:layout_below="@+id/imageButton"
        android:layout_alignLeft="@+id/imageButton"
        android:layout_alignStart="@+id/imageButton" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton4"
        android:src="@drawable/future_use"
        android:onClick="goElectric"
        android:nestedScrollingEnabled="true"
        android:layout_alignTop="@+id/imageButton3"
        android:layout_alignLeft="@+id/imageButton2"
        android:layout_alignStart="@+id/imageButton2" />
</RelativeLayout>
