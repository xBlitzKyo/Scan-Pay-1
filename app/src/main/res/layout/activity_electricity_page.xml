<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.lee.scanpay.electricity_page"
    android:id="@+id/electric"
    android:background="#FFDCA9">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Payment History"
        android:id="@+id/textView48"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignWithParentIfMissing="false"
        android:autoText="false"
        android:background="#FD5621"
        android:gravity="fill_vertical|center_horizontal"
        android:layout_alignParentTop="true"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/scan_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textIsSelectable="true"
        android:clickable="false" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:clickable="false"
        android:gravity="fill_vertical|center_horizontal"
        android:layout_marginBottom="0dp"
        android:focusable="false">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="fill_horizontal|center_horizontal"
            android:background="#FF9700"
            android:layout_marginBottom="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Bill No"
                android:id="@+id/textView"
                android:layout_margin="4dp"
                android:gravity="fill_horizontal|center_horizontal"
                android:layout_marginBottom="0dp"
                android:paddingLeft="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Amount"
                android:id="@+id/textView2"
                android:layout_margin="4dp"
                android:gravity="fill_horizontal|center_horizontal"
                android:layout_marginBottom="0dp"
                android:paddingLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Date"
                android:id="@+id/textView7"
                android:layout_margin="4dp"
                android:gravity="fill_horizontal|center_horizontal"
                android:layout_marginBottom="0dp"
                android:paddingLeft="10dp"
                android:editable="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Status"
                android:id="@+id/textView3"
                android:layout_margin="4dp"
                android:gravity="fill_horizontal|center_horizontal"
                android:paddingLeft="10dp"
                android:layout_marginBottom="0dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:gravity="fill_horizontal|center_horizontal"
            android:background="#FFBD5D"
            android:layout_marginBottom="0dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="2085639"
                android:id="@+id/textView4"
                android:layout_margin="4dp"
                android:gravity="fill_horizontal|center_horizontal"
                android:layout_marginBottom="0dp"
                android:paddingLeft="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="RM200.00"
                android:id="@+id/textView5"
                android:layout_margin="4dp"
                android:gravity="fill_horizontal|center_horizontal"
                android:layout_marginBottom="0dp"
                android:paddingLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="12/06/15"
                android:id="@+id/textView6"
                android:layout_margin="4dp"
                android:gravity="fill_horizontal|center_horizontal"
                android:paddingLeft="10dp"
                android:layout_marginBottom="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Paid"
                android:id="@+id/textView8"
                android:layout_margin="4dp"
                android:gravity="fill_horizontal|center_horizontal"
                android:layout_marginBottom="0dp"
                android:paddingLeft="16dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="fill_horizontal|center_horizontal"
            android:background="#FFBD5D"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="5832118"
                android:id="@+id/textView9"
                android:layout_margin="4dp"
                android:gravity="fill_horizontal|center_horizontal"
                android:layout_marginBottom="0dp"
                android:paddingLeft="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="RM213.70"
                android:id="@+id/textView10"
                android:layout_margin="4dp"
                android:gravity="fill_horizontal|center_horizontal"
                android:layout_marginBottom="0dp"
                android:paddingLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="10/05/15"
                android:id="@+id/textView11"
                android:layout_margin="4dp"
                android:gravity="fill_horizontal|center_horizontal"
                android:paddingLeft="10dp"
                android:layout_marginBottom="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Paid"
                android:id="@+id/textView12"
                android:layout_margin="4dp"
                android:gravity="fill_horizontal|center_horizontal"
                android:layout_marginBottom="0dp"
                android:paddingLeft="16dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="fill_horizontal|center_horizontal"
            android:background="#FFBD5D"
            android:layout_marginBottom="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="3054621"
                android:id="@+id/textView13"
                android:layout_margin="4dp"
                android:gravity="fill_horizontal|center_horizontal"
                android:layout_marginBottom="0dp"
                android:paddingLeft="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="RM197.40"
                android:id="@+id/textView14"
                android:layout_margin="4dp"
                android:gravity="fill_horizontal|center_horizontal"
                android:layout_marginBottom="0dp"
                android:paddingLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="11/04/15"
                android:id="@+id/textView15"
                android:layout_margin="4dp"
                android:gravity="fill_horizontal|center_horizontal"
                android:paddingLeft="10dp"
                android:layout_marginBottom="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Paid"
                android:id="@+id/textView16"
                android:layout_margin="4dp"
                android:gravity="fill_horizontal|center_horizontal"
                android:layout_marginBottom="0dp"
                android:paddingLeft="16dp" />
        </TableRow>
    </TableLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scan"
        android:id="@+id/scan_button"
        android:background="#FFFFFF"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="150dp" />

</LinearLayout>
