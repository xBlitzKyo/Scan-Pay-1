<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="-16dp"
    android:paddingRight="-16dp"
    android:paddingTop="-16dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.lee.scanpay.water_payment"
    android:id="@+id/water_pay"
    android:background="#FFDCA9">

    <TextView
        android:id="@+id/bill_no_1"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:textIsSelectable="true"
        android:textSize="20dp"
        android:gravity="right"
        android:layout_alignTop="@+id/textView35"
        android:layout_toRightOf="@+id/textView35"
        android:background="#FFFFFF"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/name_1"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:textIsSelectable="true"
        android:textSize="20dp"
        android:gravity="right"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_below="@+id/bill_no_1"
        android:layout_toRightOf="@+id/textView35"
        android:background="#FFFFFF"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/due_date_1"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:textIsSelectable="true"
        android:textSize="20dp"
        android:gravity="right"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_below="@+id/name_1"
        android:layout_toRightOf="@+id/textView35"
        android:background="#FFFFFF"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/outstanding_1"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:textIsSelectable="true"
        android:textSize="20dp"
        android:gravity="right"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_below="@+id/due_date_1"
        android:layout_toRightOf="@+id/textView35"
        android:background="#FFFFFF"
        android:layout_marginBottom="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pay"
        android:id="@+id/pay_button_1"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="goBank"
        android:background="#FFFFFF" />

    <TextView
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:text="Bill No:"
        android:id="@+id/textView35"
        android:textSize="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView59"
        android:paddingLeft="32dp"
        android:layout_marginBottom="10dp"
        android:textColor="#000000"
        android:gravity="center_vertical" />

    <TextView
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:text="Name:"
        android:id="@+id/textView36"
        android:textSize="20dp"
        android:layout_below="@+id/textView35"
        android:layout_alignLeft="@+id/textView35"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:paddingLeft="32dp"
        android:layout_marginBottom="10dp"
        android:textColor="#000000"
        android:gravity="center_vertical" />

    <TextView
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:text="Due Date:"
        android:id="@+id/textView37"
        android:textSize="20dp"
        android:layout_below="@+id/textView36"
        android:layout_alignLeft="@+id/textView36"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:paddingLeft="32dp"
        android:layout_marginBottom="10dp"
        android:textColor="#000000"
        android:gravity="center_vertical" />

    <TextView
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:text="Outstanding:"
        android:id="@+id/textView38"
        android:textSize="20dp"
        android:layout_below="@+id/textView37"
        android:layout_alignLeft="@+id/textView37"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:paddingLeft="32dp"
        android:layout_marginBottom="10dp"
        android:textColor="#000000"
        android:gravity="center_vertical" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="New Bill"
        android:id="@+id/textView59"
        android:layout_alignWithParentIfMissing="false"
        android:autoText="false"
        android:background="#FD5621"
        android:gravity="fill_vertical|center_horizontal"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="false"
        android:layout_marginBottom="70dp" />

</RelativeLayout>
