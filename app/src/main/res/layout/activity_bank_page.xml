<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.lee.scanpay.bank_page"
    android:id="@+id/bank_page"
    android:background="#FFDCA9">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Payment"
        android:id="@+id/textView34"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignWithParentIfMissing="false"
        android:autoText="false"
        android:background="#FD5621"
        android:gravity="fill_vertical|center_horizontal"
        android:layout_alignParentTop="true"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="30dp" />

    <EditText
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText11"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textView34"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:background="#FFFFFF"
        android:layout_marginBottom="10dp"
        android:gravity="left|fill_vertical"
        android:paddingRight="16dp"
        android:layout_toRightOf="@+id/textView40"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="false"/>

    <Spinner
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:id="@+id/spinner"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/editText11"
        android:text="Select Bank"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:background="#FFFFFF"
        android:gravity="left|fill_vertical|center_horizontal"
        android:touchscreenBlocksFocus="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_marginBottom="10dp"
        android:paddingRight="16dp"
        android:layout_toRightOf="@+id/textView41" />

    <EditText
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText12"
        android:layout_below="@+id/spinner"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:background="#FFFFFF"
        android:layout_marginBottom="10dp"
        android:gravity="left|fill_vertical"
        android:paddingRight="16dp"
        android:layout_toRightOf="@+id/textView42" />

    <EditText
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText13"
        android:layout_below="@+id/editText12"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:background="#FFFFFF"
        android:layout_marginBottom="10dp"
        android:gravity="left|fill_vertical"
        android:paddingRight="16dp"
        android:layout_toRightOf="@+id/textView43" />

    <EditText
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/editText14"
        android:layout_below="@+id/editText13"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:background="#FFFFFF"
        android:layout_marginBottom="10dp"
        android:gravity="left|fill_vertical"
        android:paddingRight="16dp"
        android:layout_toRightOf="@+id/textView44" />

    <EditText
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText15"
        android:layout_below="@+id/editText14"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:background="#FFFFFF"
        android:layout_marginBottom="10dp"
        android:gravity="left|fill_vertical"
        android:paddingRight="16dp"
        android:layout_toRightOf="@+id/textView45" />

    <EditText
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/editText16"
        android:layout_below="@+id/editText15"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:background="#FFFFFF"
        android:layout_marginBottom="20dp"
        android:gravity="left|fill_vertical"
        android:paddingRight="16dp"
        android:layout_toRightOf="@+id/textView46" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="continue"
        android:id="@+id/continue_button"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/spinner"
        android:layout_alignEnd="@+id/spinner"
        android:onClick="success"
        android:singleLine="false"
        android:background="#FFFFFF"
        android:layout_below="@+id/textView46" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="Name :"
        android:id="@+id/textView40"
        android:layout_above="@+id/spinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:textColor="#000000"
        android:paddingLeft="16dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="Bank :"
        android:id="@+id/textView41"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_below="@+id/textView40"
        android:layout_alignLeft="@+id/textView40"
        android:layout_alignStart="@+id/textView40"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp"
        android:paddingLeft="16dp" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="Card No :"
        android:id="@+id/textView42"
        android:textSize="20dp"
        android:textColor="#000000"
        android:gravity="center_vertical"
        android:layout_below="@+id/textView41"
        android:layout_alignLeft="@+id/textView41"
        android:layout_alignStart="@+id/textView41"
        android:layout_marginBottom="10dp"
        android:paddingLeft="16dp" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="Security Code :"
        android:id="@+id/textView43"
        android:textSize="20dp"
        android:textColor="#000000"
        android:gravity="center_vertical"
        android:layout_below="@+id/textView42"
        android:layout_alignLeft="@+id/textView42"
        android:layout_alignStart="@+id/textView42"
        android:layout_marginBottom="10dp"
        android:paddingLeft="16dp" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="Address :"
        android:id="@+id/textView44"
        android:textSize="20dp"
        android:textColor="#000000"
        android:gravity="center_vertical"
        android:layout_below="@+id/textView43"
        android:layout_alignLeft="@+id/textView43"
        android:layout_alignStart="@+id/textView43"
        android:layout_marginBottom="10dp"
        android:paddingLeft="16dp" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="Email :"
        android:id="@+id/textView45"
        android:textSize="20dp"
        android:textColor="#000000"
        android:gravity="center_vertical"
        android:layout_below="@+id/textView44"
        android:layout_alignLeft="@+id/textView44"
        android:layout_alignStart="@+id/textView44"
        android:layout_marginBottom="10dp"
        android:paddingLeft="16dp" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="Phone No :"
        android:id="@+id/textView46"
        android:textSize="20dp"
        android:textColor="#000000"
        android:gravity="center_vertical"
        android:layout_alignRight="@+id/textView45"
        android:layout_alignEnd="@+id/textView45"
        android:layout_marginBottom="10dp"
        android:paddingLeft="16dp"
        android:layout_below="@+id/textView45" />

</RelativeLayout>
